<%= javascript_include_tag "/assets/mm_products" %>
<div class="row">
  <div class="col s12">
    <h3>Productos</h3>
  </div>
</div>
<div class="row">
  <% @products.each do |product| %>
  <div class="col s12 m7">
    <div class="card horizontal hoverable">
      <div class="card-image">
        <a href='<%= "/products/#{product.id}" %>'><img src="assets/food/<%= product.img %>"></a>
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <h5><%= product.name %></h5>
          <p><strong>Calorías</strong>: <%= product.calories %></p>
          <br>
          <p><strong>Proteínas</strong>: <%= product.protein %></p>
          <p><strong>Grasas</strong>: <%= product.fat %></p>
          <p><strong>Carbohidratos</strong>: <%= product.carbs %></p>
        </div>
        <div class="card-action">
          <%= link_to "MAS INFORMACION", "/products/#{product.id}", class: 'green-text' %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
